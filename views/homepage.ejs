<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Common Header -->
    

    <div class="container">

        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <span class="fs-4">Simple Header</span>
            </a>
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="/create" class="nav-link active">Create</a></li>
                <li class="nav-item"><a href="/" class="nav-link">View Data</a></li>
            </ul>
        </header>

        <h2 class="mb-4">Task List</h2>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>task</th>
                    <th>date assigned</th>
                    <th>date completed</th>
                    <th>status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tasks.forEach(task => { %>
                    <tr>
                        <td><%= task.name %></td>
                        <td><%= task.dateAssigned %></td>
                        <td><%= task.dateCompleted ? task.dateCompleted : 'N/A' %></td>
                        <td>
                             <%= task.status %>
                        </td>
                        <td>
                            <a href="/edit/<%= task._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/delete/<%= task._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
            
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
