<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    

    <div class="container">

        <h2>Edit Page</h2>
        <!-- Common Header -->
        <form action="/edit/<%= task._id %>" method="POST">
            <div class="mb-3">
                <label class="form-label">Task Name</label>
                <input type="text" name="name" class="form-control" required value="<%= task.name %>">
            </div>
        
            <div class="mb-3">
                <label class="form-label">Date Assigned</label>
                <input type="date" name="dateAssigned" class="form-control" required value="<%= task.dateAssigned.toISOString().split('T')[0] %>">
            </div>
        
            <div class="mb-3">
                <label class="form-label">Date Completed</label>
                <input type="date" name="dateCompleted" class="form-control" 
                value="<%= task.dateCompleted ? task.dateCompleted.toISOString().split('T')[0] : '' %>">
            </div>
        
            <div class="mb-3">
                <label class="form-label">Status</label>
                <div>
                    <input type="radio" name="status" value="Incomplete" <%= task.status === 'Incomplete' ? 'checked' : '' %>> Incomplete
                    <input type="radio" name="status" value="Completed" <%= task.status === 'Completed' ? 'checked' : '' %>> Completed
                </div>
            </div>
        
            <button type="submit" class="btn btn-primary">Update Task</button>
        </form>
        
    </div>

</body>
</html>
